<mujoco model="MIMo">

    <compiler inertiafromgeom="true" angle="degree"/>

    <option gravity="0 0 -9.81" timestep="0.005" iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic" impratio="1.0"/>

    <size nconmax="1000" njmax="5000" nstack="10000000"/>

    <visual>
        <map force="0.1" zfar="30" znear="0.001"/>
        <rgba haze="0.15 0.25 0.35 0.5"/>
        <quality shadowsize="4096"/>
        <global offwidth="800" offheight="800"/>
    </visual>

    <default>

        <default class="scene">
			<geom condim="6" friction="1 0.005 0.0002" solimp="0.9995 0.9999 0.001 0.5 1" solref="0.005 1"/>
			<default class="scene:bouncy">
				<geom solimp="0.99 0.995 0.001 0.5 2" solref="-20000 -20"/>
			</default>
		</default>

        <geom material="matgeom" condim="3" solimp="0.95 0.99 0.001 0.5 1" solref="0.005 1"/>
    </default>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>

        <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278"
            rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>

        <material name="matgeom" texture="texgeom" texuniform="true" rgba="0.8 0.6 .4 1"/>
		<material name="matmocap" texture="texgeom" texuniform="true" rgba="0.5 0 0.5 0.5"/>

		<material name="red" rgba="0.8 0 0 1" specular=".2" shininess=".8"/>
		<material name="green" rgba="0 0.8 0 1" specular=".2" shininess=".8"/>
		<material name="blue" rgba="0.15 0.15 1 1" specular=".2" shininess=".8"/>
		<material name="yellow" rgba="0.7 0.7 0 1" specular=".2" shininess=".8"/>
		<material name="orange" rgba="0.9 0.4 0 1" specular=".2" shininess=".8"/>
		<material name="wall" rgba="0.9 0.9 0.7 1" specular="0" shininess="0"/>

        <!-- Room -->
        <texture name="texfloor" type="2d" file="env_tex/floor2.png"/>
        <material name="matfloor" texture="texfloor" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>

        <texture name="texwall" type="2d" file="env_tex/wall3.png"/>
        <material name="matwall" texture="texwall" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>

        <texture name="texceil" type="2d" file="env_tex/ceiling3.png"/>
        <material name="matceil" texture="texceil" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>
        
        <!-- Decorations -->
        <texture name="texdeco0" type="2d" file="env_tex/portrait3.png"/>
		<material name="matdeco0" texture="texdeco0" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>		

		
    </asset>

	
	<!-- Import everything except the kinematic tree -->
	<include file="explore_metav2.xml"></include>

	<equality>
		<weld body1="mimo_location"/>
	</equality>

    <worldbody>

        <light directional="false" diffuse=".7 .7 .7" specular="0 0 0" pos="-0.1642917015027644 0.1845025302398725 0.7980423953216392" dir="0 0 -1" castshadow="false"/>
        <light mode="targetbodycom" target="upper_body" directional="false" diffuse=".4 .4 .4" specular="0.3 0.3 0.3" pos="-0.29009384365834745 0.009812271608219847 0.8916271521350395" dir="0 0 -1"/>
	
		<!-- The location and orientation of the base model can be set using this body -->
		<body name="mimo_location" pos="0.0579584 -0.00157173 0.0566738" quat="0.892294 -0.0284863 -0.450353 -0.0135029">
			<freejoint name="mimo_location"/>
			<include file="mimo/MIMo_modelv2.xml"></include> <!-- Import the actual model-->
		</body>

		<!-- Targets -->

		<body name="head_target" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="red" group="4"/> 
		</body>
		<body name="hand_target" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="green" group="4"/> 
		</body>
		<body name="hand_target_1" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="blue" group="4"/> 
		</body>

        <!-- Room -->

        <geom name="floor"      type="plane" material="matfloor" size="1.533 1.137 0.25"  pos="0 0 0" condim="3"/>

        <geom name="wall_left"  type="plane" material="matwall"  size="1.533 0.969 0.25" pos="0 1.137 0.969" xyaxes="1 0 0 0 0 1"/>
        <geom name="wall_right" type="plane" material="matwall"  size="1.533 0.969 0.25" pos="0 -1.137 0.969" xyaxes="-1 0 0 0 0 1"/>
        <geom name="wall_front" type="plane" material="matwall"  size="1.137 0.969 0.25" pos="1.533 0 0.969" xyaxes="0 -1 0 0 0 1"/>
        <geom name="wall_back"  type="plane" material="matwall"  size="1.137 0.969 0.25" pos="-1.533 0 0.969" xyaxes="0 1 0 0 0 1"/>

        <geom name="ceil"       type="plane" material="matceil"  size="1.533 1.137 0.25"  pos="0 0 1.938" zaxis="0 0 -1" condim="3" />

        <!-- Decorations -->
        <geom name="deco0"  type="plane" material="matdeco0"  size="0.278 0.278 0.1" pos="-1.532 0.455 0.581" xyaxes="0 1 0 0 0 1"/>		

		
    </worldbody>

</mujoco>
