<mujoco model="MIMo">

    <compiler inertiafromgeom="true" angle="degree"/>

    <option gravity="0 0 -9.81" timestep="0.005" iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic" impratio="1.0"/>

    <size nconmax="1000" njmax="5000" nstack="10000000"/>

    <visual>
        <map force="0.1" zfar="30" znear="0.001"/>
        <rgba haze="0.15 0.25 0.35 0.5"/>
        <quality shadowsize="4096"/>
        <global offwidth="800" offheight="800"/>
    </visual>

    <default>

        <default class="scene">
			<geom condim="6" friction="1 0.005 0.0002" solimp="0.9995 0.9999 0.001 0.5 1" solref="0.005 1"/>
			<default class="scene:bouncy">
				<geom solimp="0.99 0.995 0.001 0.5 2" solref="-20000 -20"/>
			</default>
		</default>

        <geom material="matgeom" condim="3" solimp="0.95 0.99 0.001 0.5 1" solref="0.005 1"/>
    </default>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>

        <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278"
            rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>

        <material name="matgeom" texture="texgeom" texuniform="true" rgba="0.8 0.6 .4 1"/>
		<material name="matmocap" texture="texgeom" texuniform="true" rgba="0.5 0 0.5 0.5"/>

		<material name="red" rgba="0.8 0 0 1" specular=".2" shininess=".8"/>
		<material name="green" rgba="0 0.8 0 1" specular=".2" shininess=".8"/>
		<material name="blue" rgba="0.15 0.15 1 1" specular=".2" shininess=".8"/>
		<material name="yellow" rgba="0.7 0.7 0 1" specular=".2" shininess=".8"/>
		<material name="orange" rgba="0.9 0.4 0 1" specular=".2" shininess=".8"/>
		<material name="wall" rgba="0.9 0.9 0.7 1" specular="0" shininess="0"/>

        <!-- Room -->
        <texture name="texfloor" type="2d" file="env_tex/floor2.png"/>
        <material name="matfloor" texture="texfloor" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>

        <texture name="texwall" type="2d" file="env_tex/wall5.png"/>
        <material name="matwall" texture="texwall" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>

        <texture name="texceil" type="2d" file="env_tex/ceiling1.png"/>
        <material name="matceil" texture="texceil" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>
        
        <!-- Decorations -->
        <texture name="texdeco0" type="2d" file="env_tex/portrait4.png"/>
		<material name="matdeco0" texture="texdeco0" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>		

		<texture name="texdeco1" type="2d" file="env_tex/portrait2.png"/>
		<material name="matdeco1" texture="texdeco1" texrepeat="1 1" texuniform="false" specular="0.0" shininess="0.0"/>		

		

        <!-- Toys -->
        <mesh name="mesh_toy0" file="meshes/airplane_021.stl" scale="0.017 0.017 0.017"/>
		<material name="toy0_mat" rgba="0.845 0.224 0.514 1" specular="0.119" shininess="0.465"/>		

		<mesh name="mesh_toy1" file="meshes/hammer_001.stl" scale="0.037 0.037 0.037"/>
		<material name="toy1_mat" rgba="0.167 0.185 0.780 1" specular="0.087" shininess="0.003"/>		

		<mesh name="mesh_toy2" file="meshes/hammer_001.stl" scale="0.013 0.013 0.013"/>
		<material name="toy2_mat" rgba="0.699 0.637 0.287 1" specular="0.151" shininess="0.244"/>		

		<mesh name="mesh_toy3" file="meshes/train_017.stl" scale="0.028 0.028 0.028"/>
		<material name="toy3_mat" rgba="0.617 0.242 0.310 1" specular="0.087" shininess="0.215"/>		

		<mesh name="mesh_toy4" file="meshes/ball_004.stl" scale="0.033 0.033 0.033"/>
		<material name="toy4_mat" rgba="0.655 0.078 0.262 1" specular="0.305" shininess="0.089"/>		

		<mesh name="mesh_toy5" file="meshes/mushroom_002.stl" scale="0.048 0.048 0.048"/>
		<material name="toy5_mat" rgba="0.504 0.889 0.738 1" specular="0.102" shininess="0.076"/>		

		<mesh name="mesh_toy6" file="meshes/penguin_000.stl" scale="0.030 0.030 0.030"/>
		<material name="toy6_mat" rgba="0.401 0.217 0.842 1" specular="0.470" shininess="0.230"/>		

		
        
    </asset>

	
	<!-- Import everything except the kinematic tree -->
	<include file="explore_meta.xml"></include>

	<equality>
		<weld body1="mimo_location"/>
	</equality>

    <worldbody>

        <light directional="false" diffuse=".7 .7 .7" specular="0 0 0" pos="-0.16105811211486432 -0.3725238914655761 0.9565932592088604" dir="0 0 -1" castshadow="false"/>
        <light mode="targetbodycom" target="upper_body" directional="false" diffuse=".4 .4 .4" specular="0.3 0.3 0.3" pos="0.5828694225325403 0.0778422686752176 1.0419968291136406" dir="0 0 -1"/>
	
		<!-- The location and orientation of the base model can be set using this body -->
		<body name="mimo_location" pos="-0.090 0.070 0.057" quat="-0.835 0.180 0.414 0.315">
			<freejoint name="mimo_location"/>
			<include file="mimo/MIMo_model.xml"></include> <!-- Import the actual model-->
		</body>

		<!-- Targets -->

		<body name="head_target" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="red" group="4"/> 
		</body>
		<body name="hand_target" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="green" group="4"/> 
		</body>
		<body name="hand_target_1" mocap="true" pos=".0 .0 .0">
			<geom type="sphere" size="0.01" contype="0" conaffinity="0" material="blue" group="4"/> 
		</body>

        <!-- Room -->

        <geom name="floor"      type="plane" material="matfloor" size="1.744 1.068 0.25"  pos="0 0 0" condim="3"/>

        <geom name="wall_left"  type="plane" material="matwall"  size="1.744 1.063 0.25" pos="0 1.068 1.063" xyaxes="1 0 0 0 0 1"/>
        <geom name="wall_right" type="plane" material="matwall"  size="1.744 1.063 0.25" pos="0 -1.068 1.063" xyaxes="-1 0 0 0 0 1"/>
        <geom name="wall_front" type="plane" material="matwall"  size="1.068 1.063 0.25" pos="1.744 0 1.063" xyaxes="0 -1 0 0 0 1"/>
        <geom name="wall_back"  type="plane" material="matwall"  size="1.068 1.063 0.25" pos="-1.744 0 1.063" xyaxes="0 1 0 0 0 1"/>

        <geom name="ceil"       type="plane" material="matceil"  size="1.744 1.068 0.25"  pos="0 0 2.126" zaxis="0 0 -1" condim="3" />

        <!-- Decorations -->
        <geom name="deco0"  type="plane" material="matdeco0"  size="0.228 0.171 0.1" pos="-1.743 -0.427 1.488" xyaxes="0 1 0 0 0 1"/>		

		<geom name="deco1"  type="plane" material="matdeco1"  size="0.268 0.268 0.1" pos="0.427 1.067 0.638" xyaxes="1 0 0 0 0 1"/>		

		

        <!-- Toys -->
        <body name="toy0" pos="0.277 0.057 0.231" euler="0 0 211.824">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy0" condim="6" mass="0.3" material="toy0_mat"/>
		</body>		

		<body name="toy1" pos="0.263 -0.019 0.259" euler="0 0 268.646">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy1" condim="6" mass="0.3" material="toy1_mat"/>
		</body>		

		<body name="toy2" pos="-0.157 -0.298 0.177" euler="0 0 169.122">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy2" condim="6" mass="0.3" material="toy2_mat"/>
		</body>		

		<body name="toy3" pos="0.020 -0.099 0.169" euler="0 0 121.491">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy3" condim="6" mass="0.3" material="toy3_mat"/>
		</body>		

		<body name="toy4" pos="-0.459 -0.086 0.277" euler="0 0 197.039">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy4" condim="6" mass="0.3" material="toy4_mat"/>
		</body>		

		<body name="toy5" pos="-0.014 -0.375 0.237" euler="0 0 296.863">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy5" condim="6" mass="0.3" material="toy5_mat"/>
		</body>		

		<body name="toy6" pos="-0.137 -0.505 0.241" euler="0 0 198.587">
		    <freejoint/>
		    <geom type="mesh" mesh="mesh_toy6" condim="6" mass="0.3" material="toy6_mat"/>
		</body>		

		

    </worldbody>

</mujoco>
